{
  "name": "jarvis-ai-assistant",
  "version": "1.1.0",
  "description": "Jarvis - AI Assistant for Mac with voice dictation and AI capabilities",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"webpack --watch\" \"wait-on dist/main.js && electron .\"",
    "start": "electron .",
    "build": "npm run build:native && npx webpack",
    "server": "tsx src/server/index.ts",
    "build:tsc": "tsc --noEmit",
    "build:native": "node-gyp rebuild",
    "build:mac": "npm run build && electron-builder --mac --dir",
    "build:dmg": "npm run build && electron-builder --mac --x64 --arm64",
    "build:dmg:custom": "npm run build:mac && chmod +x ./scripts/create-dmg.sh && ./scripts/create-dmg.sh both",
    "build:dmg:x64": "npm run build:mac && chmod +x ./scripts/create-dmg.sh && ./scripts/create-dmg.sh x64",
    "build:dmg:arm64": "npm run build:mac && chmod +x ./scripts/create-dmg.sh && ./scripts/create-dmg.sh arm64",
    "build:signed": "chmod +x ./scripts/notarization/build-sign-notarize.sh && ./scripts/notarization/build-sign-notarize.sh both",
    "build:signed:x64": "chmod +x ./scripts/notarization/build-sign-notarize.sh && ./scripts/notarization/build-sign-notarize.sh x64",
    "build:signed:arm64": "chmod +x ./scripts/notarization/build-sign-notarize.sh && ./scripts/notarization/build-sign-notarize.sh arm64",
    "notarize": "chmod +x ./scripts/notarization/quick-notarize.sh && ./scripts/notarization/quick-notarize.sh",
    "dist": "npm run build:dmg",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPatterns=integration",
    "test:regression": "jest --testPathPatterns=regression",
    "test:performance": "jest --testPathPatterns=performance",
    "test:robustness": "node scripts/test-robustness.js",
    "test:launch": "node scripts/launch-readiness.js",
    "install": "node-gyp rebuild"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "dictation",
    "voice",
    "mac"
  ],
  "author": "Jarvis Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "create-dmg": "^7.1.0",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.2",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.3",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.5.1",
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.2.0",
    "@langchain/openai": "^0.3.0",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/ws": "^8.18.1",
    "canvas-confetti": "^1.9.3",
    "dotenv": "^16.5.0",
    "fastify": "^4.29.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.3",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "node-addon-api": "^8.4.0",
    "node-fetch": "^3.3.2",
    "openai": "^5.5.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "webpack": "^5.89.0",
    "whisper-node-addon": "^1.0.2",
    "ws": "^8.18.3",
    "zod": "^3.22.0"
  },
  "build": {
    "appId": "com.jarvis.ai-assistant",
    "productName": "Jarvis - AI Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/jarvis-ai-assistant.node",
        "to": "jarvis-ai-assistant.node"
      },
      {
        "from": "build/Release/universal_key_monitor.node",
        "to": "universal_key_monitor.node"
      },
      {
        "from": "build/Release/fn_key_monitor.node",
        "to": "fn_key_monitor.node"
      },
      {
        "from": "build/Release/audio_capture.node",
        "to": "audio_capture.node"
      },
      {
        "from": "build/Release/typing_monitor.node",
        "to": "typing_monitor.node"
      },
      {
        "from": "assets/jarvis-logo-dark.png",
        "to": "jarvis-logo-dark.png"
      },
      {
        "from": "assets/jarvis-logo-light.png",
        "to": "jarvis-logo-light.png"
      },
      {
        "from": "assets/jarvis-logo.png",
        "to": "jarvis-logo.png"
      },
      {
        "from": "assets/jarvis-menubar-template.png",
        "to": "jarvis-menubar-template.png"
      },
      {
        "from": "src/assets/sounds/confetti-pop.mp3",
        "to": "assets/sounds/confetti-pop.mp3"
      }
    ],
    "asarUnpack": [
      "node_modules/@electron",
      "node_modules/electron",
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.business",
      "entitlements": "certificates/entitlements.mac.plist",
      "entitlementsInherit": "certificates/entitlements.mac.plist",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": null,
      "type": "distribution",
      "bundleVersion": "0.1.0",
      "notarize": {
        "teamId": ""
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Jarvis needs microphone access for voice dictation and AI assistance",
        "NSScreenCaptureDescription": "Jarvis needs screen capture permission for AI assistance features"
      }
    },
    "dmg": {
      "background": "dmg-assets/background.png",
      "icon": "assets/icon.icns",
      "iconSize": 80,
      "format": "UDZO",
      "writeUpdateInfo": false,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "afterSign": "scripts/after-sign.js",
    "protocols": [
      {
        "name": "Jarvis Protocol",
        "schemes": [
          "jarvis"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "",
      "repo": "jarvis-ai-assistant",
      "releaseType": "release"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
